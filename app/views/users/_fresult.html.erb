<% if params[:action] == 'search' %>
	<div class="symbol-warning indicator">
		<%= bootstrap_flash %>
	</div>
<% end %>

	<% if @user_friend.present? %>
	<% @user_friend.each do |friend| %>
		<div class="well indicator">
			<strong>Name: </strong> <%= friend.full_name %>&nbsp;&nbsp;
			<strong>Name: </strong> <%= friend.email %>
			<%= link_to "ADD", friends_path(user:current_user, friend: friend), class: "btn btn-xs btn-success",method: :post %>
			
		</div>
	<%end%>
<% end%>
