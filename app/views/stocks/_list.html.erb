<table class="table">
	<thead>
		<tr>
			<th>SYMBOL</th>
			<th>NAME</th>
			<th>PRICE</th>
			<% if @user.id == current_user.id %>
				<th>ACTIONS</th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @user_stocks.each do |user_stock| %>
			<tr>
				<td><%= user_stock.ticker %></td>
				<td><%= user_stock.name %></td>
				<td><%= user_stock.last_price %></td>
				<% if @user.id == current_user.id %>
					<td><%= link_to "DELETE", user_stock_path(user_stock), method: :delete, data: {confirm: "are you sure?"}, class:"btn btn-danger" %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>